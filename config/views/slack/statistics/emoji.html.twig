{% extends "base.html.twig" %}

{% block title %}Emojis Stats{% endblock title %}

{% block content %}
<body class="bg-dark">
<div class="container" style="margin-top: 1rem; margin-bottom: 1rem;">
    <h5 class="text-white text-center">Last update: {{ date }}</h5>
</div>
<div class="container" style="margin-top: 1rem; margin-bottom: 3rem;">
{% for quarto in emojis|batch(4) %}
    <div class="row card-deck">
    {% for emoji in quarto %}
    <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-3">
    <div class="card" style="margin: 1rem 0;">
        <img class="card-img-top" src="{{ emoji.url }}" alt="{{ emoji.name }}">
        <div class="card-body">
            <h5 class="card-title">:{{ emoji.name }}:</h5>
        </div>
        <div class="card-footer">
            <small class="text-muted">Nombre: {{ emoji.count }}</small>
        </div>
    </div>
    </div>
    {% endfor %}
    </div>
{% endfor %}
</div>
</body>
{% endblock content %}
