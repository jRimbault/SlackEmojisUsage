{% extends "base.html.twig" %}

{% block title %}Emojis Stats{% endblock title %}

{% block stylesheets %}
<style>
div.container {
    margin-top: 1rem;
    margin-bottom: 3rem;
}
div.card {
    margin: 1rem 0;
}
</style>
{% endblock stylesheets %}

{% block content %}
<body class="bg-light">
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <p>Last update: <span id="update">{{ date|date('H:i') }}</span></p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
            <div class="card">
                <div class="card-body">
                    <canvas id="chart-emojis" width="100" height="100"></canvas>
                </div>
            </div>
            <ul class="list-group" style="margin-top: 1rem;">
                {% for emoji in emojis|slice(0, 5) %}
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <img src="{{ emoji.2 }}" alt="" style="height: 1.5em; width: auto;">
                    <code>:{{ emoji.1 }}:</code>
                    <span class="badge badge-secondary badge-pill">{{ emoji.0 }} â€” {{ ((emoji.0 / total) * 100)|number_format(2) }}%</span>
                </a>
                {% endfor %}
            </ul>
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
            <ul class="list-group" style="margin-top: 1rem;">
                {% for emoji in emojis %}
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <img src="{{ emoji.2 }}" alt="" style="height: 1.5em; width: auto;">
                    <code>:{{ emoji.1 }}:</code>
                    <span class="badge badge-secondary badge-pill">{{ emoji.0 }}</span>
                </a>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
</body>
{% endblock content %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="/palette.js"></script>
<script src="/stats.js"></script>
{% endblock scripts %}
